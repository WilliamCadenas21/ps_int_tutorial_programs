Proceso dias_de_la_semana
	Definir diaSemana como entero;
	escribir "por favor digite el dia de la semana en que se encuentra";
	leer diaSemana;
	
	Segun diaSemana Hacer
		1:
			Escribir "hoy es lunes";
		2:
			Escribir "hoy es martes";
		3:
			Escribir "hoy es miercoles";
		4:
			Escribir "hoy es jueves";
		5:
			Escribir "hoy es viernes";
		6:
			Escribir "hoy es sabado";
		7:
			Escribir "hoy es domingo";
		De otro modo:
			Escribir "este dia no es reconocido";
	FinSegun
	
FinProceso
